<% book.book_comments.each do |comment| %>
<tr>
   <td style="width: 30%">
      <%= link_to user_path(comment.user.id) do %>
        <%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
        <%= comment.user.name %>
      <% end %>
   </td>
   <td><%= comment.comment %></td>
   <td>
       <%= link_to"Delete",book_book_comment_path(comment.book,comment),method: :delete,class:"btn btn-danger",remote: true %>
   </td>
</tr>
<% end %>