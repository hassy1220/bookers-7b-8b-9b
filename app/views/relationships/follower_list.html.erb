<div class="container">
  <h1>Follower user</h1>
  <% @follower_list.each do |follower| %>
  <table class="table">
    <tr>
      <td><%= image_tag follower.get_profile_image,size:"50x50" %></td>
      <td>
        <%= follower.name %>
      </td>
      <td>
        フォロー数<%= follower.followers.count %>
      </td>
      <td>
        フォロワー数<%= follower.followeds.count %>
      </td>
      <td><%= link_to"Show",user_path(follower.id) %></td>
    </tr>
  </table>

  <% end %>
  </div>